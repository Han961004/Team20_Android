<!-- res/drawable/custom_card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 -->
    <solid android:color="#FFFFFF" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="16dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="#8000FF" />

    <!-- 패딩 설정 -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
